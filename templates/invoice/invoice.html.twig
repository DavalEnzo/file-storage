{% extends 'base.html.twig' %}

{% block title %}Mes Factures{% endblock %}

{% block body %}
    <div class="container mx-auto mt-16 px-4">
            <div class="text-center">
                <h1 class="text-gray-800 text-4xl font-bold">Vos factures</h1>
            </div>

        <table class="min-w-full divide-y divide-gray-200 rounded-lg overflow-hidden w-full mt-6">
            <thead>
            <tr>
                <th class="px-6 py-3 bg-gray-100">Nom du fichier</th>
                <th class="px-6 py-3 bg-gray-100">Date de facturation</th>
                <th class="px-6 py-3 bg-gray-100">Actions</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200 space-y-4">
            {% for facture in factures %}
                <tr>
                    <td class="px-6 py-4 text-center">Facture {{ facture.invoiceNumber }}</td>
                    <td class="px-6 py-4 text-center">{{ facture.createDate | date('Y-m-d H:i:s') }}</td>
                    <td class="px-auto py-4 flex justify-center">
                            <div class="m-auto flex justify-center w-1/2">
                                <a href="{{ path('app_download_facture', {'id': facture.id}) }}" title="Download" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                                    <i class="fas fa-download"></i>
                                </a>
                            </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

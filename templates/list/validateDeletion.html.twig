{% extends 'base.html.twig' %}

{% block title %}Supprimer mon compte{% endblock %}

{% block body %}

<div class="w-1/3 bg-gray-100 mx-auto p-4 mt-6 rounded-2xl">
    <div class="text-center">
        <h1>Formulaire de suppression du compte</h1>

        {{ form_start(form) }}
            <div class="flex flex-col">
                <div class="mt-6">
                    <p>Veuillez renseigner votre mot de passe pour confirmer la suppression</p>
                </div>
                <div class="mt-6">
                    {{ form_widget(form.password) }}
                </div>
                <div class="mt-6">
                    {{ form_widget(form.submit, {'attr' : {'class' : "px-4 py-2 mx-2 hover:outline hover:outline-1 hover:outline-offset-0 bg-green-600 hover:outline-green-800 hover:bg-green-700 text-gray-50 rounded-3xl flex-row items-center gap-2"}}) }}
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}

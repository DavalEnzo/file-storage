<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    {% if title is defined %}
      <title>File Storage - {{title}}</title>
    {% else %}
      <title>File Storage</title>
    {% endif %}
    <link rel="icon" href="https://img.icons8.com/cotton/64/null/happy-file.png">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}
  </head>
  <body>

  <nav class="bg-gray-200 shadow shadow-gray-300 w-100 px-8 md:px-auto">
    <div class="h-16 mx-auto md:px-4 flex items-center justify-between flex-wrap md:flex-nowrap">
      <!-- Logo -->
      <a href="{{ path('index') }}">
        <div class="flex md:order-1 items-center">
          <!-- Heroicon - Chip Outline -->
          <img class="w-10 h-10" alt="logo site" src="https://img.icons8.com/cotton/64/null/happy-file.png"/>
          <h1>File Storage</h1>
        </div>
      </a>
      <div class="order-2 md:order-3">
        {% if app.user %}
            {% if app.user.status == 1 %}
                <a href="{{ path('app_list') }}" class="px-4 py-2 mx-2 hover:outline hover:outline-2 hover:outline-offset-0 bg-green-600 hover:outline-green-800 hover:bg-green-700 text-gray-50 rounded-3xl flex-row items-center gap-2">
                    <span>Mes fichiers</span>
                </a>
            {% endif %}
          <a href="{{ path('app_logout') }}" class="px-4 py-2 hover:outline hover:outline-2 hover:outline-offset-0 bg-red-500 hover:outline-red-800 hover:bg-red-600 text-gray-50 rounded-3xl flex-row items-center gap-2">
            <span>Se déconnecter</span>
          </a>
        {% else %}
          <a href="{{ path('app_login') }}" class="px-4 py-2 hover:outline hover:outline-2 hover:outline-offset-0 bg-indigo-500 hover:outline-blue-800 hover:bg-indigo-600 text-gray-50 rounded-3xl flex items-center gap-2">
            <span>Se connecter</span>
          </a>
        {% endif %}
      </div>
    </div>
  </nav>

  <!-- manque de style -->
  {% for type, message in app.flashes %}
    {% for msg in message %}
      {% if type == "danger" %}
        <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
          <span class="font-medium">Danger: </span> {{ msg }}
        </div>
      {% endif %}
      {% if type == "warning" %}
        <div class="p-4 mb-4 text-sm text-yellow-800 rounded-lg bg-yellow-50 dark:bg-gray-800 dark:text-yellow-300" role="alert">
          <span class="font-medium">Attention: </span> {{ msg }}
        </div>
      {% endif %}
      {% if type == "success" %}
        <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
          <span class="font-medium">Succès: </span> {{ msg }}
        </div>
      {% endif %}
    {% endfor %}
  {% endfor %}

  <div class="">
    {% block body %}{% endblock %}
  </div>

  {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
  {% endblock %}

  </body>
</html>

{% extends 'base.html.twig' %}

{% block body %}

    <div class="flex flex-col w-1/3 sm:w-full items-center justify-center px-6 py-5 mx-auto md:h-screen lg:py-0 bg-">
        <div class="w-full bg-white rounded-lg p-5 shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
        <h1 class="mb-8 text-3xl text-center underline font-semibold text-gray-700 dark:text-gray-200">Inscription</h1>
            {{ form_start(registrationForm, {"attr" : {"class":"w-full mx-auto max-w-lg"}} ) }}

    <div class="text-center">{{ form_label(registrationForm.lastname,"Nom ") }}</div>
    {{ form_widget(registrationForm.lastname, {"attr" : {"class":"block border border-grey-light focus:outline-2 focus:outline focus:outline-red-200 w-full p-3 rounded mb-4"},"label": "Nom","label_attr": {"class": "text-red-200"}}) }}

    <div class="text-center">{{ form_label(registrationForm.firstname) }}</div>
    {{ form_widget(registrationForm.firstname, {"attr" : {"class":"block border border-grey-light focus:outline-2 focus:outline focus:outline-red-200 w-full p-3 rounded mb-4"}}) }}

    <div class="text-center">{{ form_label(registrationForm.email) }}</div>
    {{ form_widget(registrationForm.email, {"attr" : {"class":"block border border-grey-light focus:outline-2 focus:outline focus:outline-red-200 w-full p-3 rounded mb-4"}}) }}

    {# first_options #}

    <div class="text-center">{{ form_label(registrationForm.plainPassword.first) }}</div>
    {{ form_widget(registrationForm.plainPassword.first, {"attr" : {"class":"block border border-grey-light focus:outline-2 focus:outline focus:outline-red-200 w-full p-3 rounded mb-4"}}) }}


    {# second_options #}

    <div class="text-center">{{ form_label(registrationForm.plainPassword.second) }}</div>
    {{ form_widget(registrationForm.plainPassword.second, {"attr" : {"class":"block border border-grey-light focus:outline-2 focus:outline focus:outline-red-200 w-full p-3 rounded mb-4"}}) }}


    <div class="text-center">{{ form_label(registrationForm.address) }}</div>
    {{ form_widget(registrationForm.address, {"attr" : {"class":"block border border-grey-light focus:outline-2 focus:outline focus:outline-red-200 w-full p-3 rounded mb-4"}}) }}

    <div class="text-center">{{ form_label(registrationForm.postal_code) }}</div>
    {{ form_widget(registrationForm.postal_code, {"attr" : {"class":"block border border-grey-light focus:outline-2 focus:outline focus:outline-red-200 w-full p-3 rounded mb-4"}}) }}

    {# Status doit valider l'achat #}

    <div class="flex flex-col">
        <div><label for="status">En cochant cette case, vous acceptez de continuer le processus
                d'inscription:</label><input id="status" class="mx-2" required type="checkbox"/></div>
        <div class="self-center">{{ form_row(registrationForm.submit, {"attr" : {"class":"bg-blue-500 transition-colors hover:ease-in duration-700 hover:bg-green-500 text-white font-bold py-2 self-center my-5 mx-auto px-4 rounded"}}) }}</div>
    </div>

    {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
